<mvc:View controllerName="project2.controller.Customer"
   	xmlns:mvc="sap.ui.core.mvc"
		xmlns="sap.m"
		xmlns:f="sap.f"
		xmlns:t="sap.ui.table"
		xmlns:core="sap.ui.core"
		xmlns:form="sap.ui.layout.form"
		xmlns:layout="sap.ui.layout"
		height="100%">
		<f:DynamicPage id="CustomerPage">
			<!-- DynamicPage Title -->
			<f:title>
				<f:DynamicPageTitle>
					<f:heading>
		<HBox> 
		<Button icon="sap-icon://nav-back" press=".onBack" type="Transparent"/>                   
        <Title text="고객 마스터 데이터"/>
		</HBox>						
				</f:heading>
             </f:DynamicPageTitle>
             </f:title>
					
					
					
			<!-- DynamicPage Header -->
			<f:header>
				<f:DynamicPageHeader pinnable="true">
					
						<form:SimpleForm layout="ResponsiveGridLayout">
						<form:content>


						<VBox>
						<Label text="비즈니스 파트너: " />
						<Input id="BP"
						placeholder="Enter BP..."
						showValueHelp="true"
						valueHelpRequest=".showValueHelp"
						valueHelpOnly="true"/>
						<layoutData>
                        <layout:GridData span="XL2 L2 M6 S12" />
                        </layoutData>
						</VBox>

						<VBox>
						<Label text="도로 주소: " />
						<Input id="Adress"/>
						<layoutData>
                        <layout:GridData span="XL2 L2 M6 S12" />
                        </layoutData>
						</VBox>

						<VBox>
						<Label text="도시: " labelFor="whiteSpaces"/>
						<MultiInput id="City" valueHelpOnly="true" showValueHelp="true" valueHelpRequest=".onOpenSearchRegion($event, 'city')" />
						<layoutData>
                        <layout:GridData span="XL2 L2 M6 S12" />
                        </layoutData>
						</VBox>

						<VBox>
						<Label text="국가/지역: " labelFor="whiteSpaces"/>
						<MultiInput id="Region" valueHelpOnly="true" showValueHelp="true" valueHelpRequest=".onOpenSearchRegion($event, 'region')" />
						<layoutData>
                        <layout:GridData span="XL2 L2 M6 S12" />
                        </layoutData>
						</VBox>

						<VBox>
						<Label text="비즈니스 파트너 범주: " />
						<Select id="BP_Category" width="100%">
							<items>
								<core:Item key="" text=""/>
								<core:Item key="개인" text="개인"/>
								<core:Item key="조직" text="조직"/>
							</items>
                        </Select>
						<layoutData>
                        <layout:GridData span="XL2 L2 M6 S12" />
                        </layoutData>
						</VBox>

						<VBox>
						<Label text="회사 코드: " />
						<Input id="Com_Code"/>
						<layoutData>
                        <layout:GridData span="XL2 L2 M6 S12" />
                        </layoutData>
						</VBox>

						<VBox>
						<Label text="우편 번호: " />
						<Input id="Postal_Num"/>
						<layoutData>
                        <layout:GridData span="XL2 L2 M6 S12" />
                        </layoutData>
						</VBox>

						<HBox justifyContent="End">

<Button text="실행" type="Emphasized" press=".onSearch" />
<Button text="지우기" type="Transparent" press=".onReset" class="sapUiTinyMarginBegin" />
<layoutData>
<layout:GridData span="XL12 L12 M12 S12" />
</layoutData>
</HBox>




				</form:content>
</form:SimpleForm>
</f:DynamicPageHeader>
</f:header>

<f:content class="sapUiSmallMargin">

				<t:Table id="CustomerTable"						
						rows="{CustomerModel>/}"
						selectionMode="None"
                        rowActionCount="1"
					    width="auto">

<t:rowActionTemplate>
<t:RowAction>
<t:items>
<t:RowActionItem type="Navigation" press=".onNavToDetail" />
</t:items>
</t:RowAction>
</t:rowActionTemplate>

<t:extension>
<OverflowToolbar>
<Title id="TableName" text="고객({numberModel>/number})" />
<ToolbarSpacer/>

<MenuButton
text="생성" buttonMode="Split" useDefaultActionOnly="true">
	<menu>
				<Menu itemSelected="onMenuAction">

					<MenuItem text="개인" icon="sap-icon://add-employee" press=".onCreateBP1">
					</MenuItem>

					<MenuItem text="조직" icon="sap-icon://customer-and-supplier" press=".onCreateBP2">
					</MenuItem>
				</Menu>
			</menu>
		</MenuButton>

<Button
text="정렬"
press=".onSort"
type="Transparent" />
<Button
icon="sap-icon://delete"
tooltip="삭제"
press=".onDelete"
type="Transparent" />
<Button
icon="../component/gl/image/downexcel.png"
tooltip="엑셀 다운로드"
press=".onDataExport"
type="Transparent" />
</OverflowToolbar>
</t:extension>



<t:columns>

<t:Column hAlign="Center" width="5rem">

<t:template>
<CheckBox visible="true"
selected="{CustomerModel>CHK}" textAlign="Center"
select=".oncheckselect"/>
</t:template>
</t:Column> 

<t:Column hAlign="Center">
<Label text="비즈니스 파트너"  />
<t:template>
<ObjectIdentifier
title="{= ${CustomerModel>bp_category} === '1' ? ${CustomerModel>bp_name} : ${CustomerModel>bp_name} }" 
text="{CustomerModel>bp_number}"/>
</t:template>
</t:Column>



<t:Column hAlign="Center">
<Label text="회사 코드"  />
<t:template>
<Text text="{CustomerModel>comcode}" />
</t:template>
</t:Column>

<t:Column hAlign="Center">
<Label text="도로 주소"  />
<t:template>
<Text text="{CustomerModel>address}" textAlign = "Left"/>
</t:template>
</t:Column>

<t:Column hAlign="Center">
<Label text="도시"  />
<t:template>
<Text text="{CustomerModel>city}" />
</t:template>
</t:Column>

<t:Column hAlign="Center">
<Label text="우편 번호"  />
<t:template>
<Text text="{CustomerModel>potal_code}" textAlign = "Left"/>
</t:template>
</t:Column>

<t:Column hAlign="Center">
<Label text="국가/지역"  />
<t:template>
<Text text="{CustomerModel>country}" />
</t:template>
</t:Column>

<t:Column hAlign="Center">
<Label text="고객 분류"  />
<t:template>
<Text text="{CustomerModel>classify_cust}" />
</t:template>
</t:Column>


</t:columns>
</t:Table>
</f:content>
</f:DynamicPage>
</mvc:View>




