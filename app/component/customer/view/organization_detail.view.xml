								<m:Label text="Mentor junior developers" />
								<m:Text text="Due Dec 31 Cascaded"/>

						</forms:SimpleForm>
					</uxap:ObjectPageSubSection> -->
				</uxap:subSections>
			</uxap:ObjectPageSection>

			<uxap:ObjectPageSection title="주소" titleUppercase="false" >
				<uxap:subSections>
					<uxap:ObjectPageSubSection titleUppercase="false">
						<forms:SimpleForm editable="true" layout="ColumnLayout" title="표준 주소" columnsM="2"
										columnsL="3"
										columnsXL="4">

								<m:Label text="도로 주소" />
								<m:Text text="{CustomerModel>/address}" />

								<m:Label text="번지" />
								<m:Text text="{CustomerModel>/house_num}" />

								<m:Label text="우편번호" />
								<m:Text text="{CustomerModel>/potal_code}" />

								<m:Label text="도시" />
								<m:Text text="{CustomerModel>/city}" />

								<m:Label text="국가/지역" />
								<m:Text text="{CustomerModel>/country}" />

								<m:Label text="지역" />
								<m:Text text="{CustomerModel>/region}" />

								<m:Label text="우체국 우편번호" />
								<m:Text text="{CustomerModel>/postoffice_postal_number}" />
								<m:Input id="postoffice_postal_number" value="{CustomerModel>/postoffice_postal_number}" visible="{=${editModel>/edit}}"/>

						</forms:SimpleForm>
					</uxap:ObjectPageSubSection>

