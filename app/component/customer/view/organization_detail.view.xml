<mvc:View xmlns:vbm="sap.ui.vbm" controllerName = "project2.controller.customer_detail"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:uxap="sap.uxap"
	xmlns:layout="sap.ui.layout"
	xmlns:core="sap.ui.core"
	xmlns:m="sap.m"
	xmlns:forms="sap.ui.layout.form">
	<uxap:ObjectPageLayout id="ObjectPageLayout"
		subSectionLayout="TitleOnLeft"
		showTitleInHeaderContent="true"
		upperCaseAnchorBar="false">
		<uxap:headerTitle>
			<uxap:ObjectPageDynamicHeaderTitle>
				<uxap:expandedHeading>
					<m:Title text="Cust" wrapping="true" />
				</uxap:expandedHeading>

				<uxap:snappedHeading>
						<m:FlexBox fitContainer="true" alignItems="Center" >
							<m:Avatar src="sap-icon://picture" class="sapUiTinyMarginEnd"/>
							<m:Title text="Denise Smith" wrapping="true" />
						</m:FlexBox>
				</uxap:snappedHeading>

				<uxap:expandedContent>
					<m:Text text="{CompanyModel>/bp_number}"/>
					<!-- <Input id="" /> -->
				</uxap:expandedContent>

				<uxap:actions>
					<m:Button text="편집" press="onEdit" type="Emphasized" visible="{=!${editModel>/edit}}"/>
					<m:Button text="확인" press="onConfirm" visible="{=${editModel>/edit}}" />
					<m:Button text="취소" press="onCancel" visible="{=${editModel>/edit}}" />
				</uxap:actions>
			</uxap:ObjectPageDynamicHeaderTitle>
		</uxap:headerTitle>

		<uxap:headerContent>
			<m:FlexBox wrap="Wrap" fitContainer="true">
				<m:Avatar class="sapUiSmallMarginEnd" src="sap-icon://picture" displaySize="L"/>

				<layout:VerticalLayout class="sapUiLargeMarginEnd">
					<m:Label text="그룹화: 외부 숫자 번호 지정(범위 높음) (BF03)"/>
					<m:Label text="비지니스 파트너 범주: {CustomerModel>/bp_category}"/>
					<!-- <m:Text text="" /> -->
					<layout:HorizontalLayout>
						<m:Image src="./test-resources/sap/uxap/images/linkedin.png"/>
						<m:Image src="./test-resources/sap/uxap/images/Twitter.png" class="sapUiSmallMarginBegin"/>
					</layout:HorizontalLayout>
				</layout:VerticalLayout>

				<layout:VerticalLayout class="sapUiLargeMarginEnd">
					<m:Label text="표준 주소"/>
					<m:Text text="{CustomerModel>/bp_number}" />
					<m:VBox>
						<m:Label text="Mountain View 94043-1315, 미국"/>
					</m:VBox>
				</layout:VerticalLayout>

			<layout:VerticalLayout class="sapUiLargeMarginEnd">
					<m:Label text="상태"/>
					<m:VBox>
						<m:Label text="청구 보류:"/>
						<m:Text text="{CustomerModel>/holdclaim}" />
					</m:VBox>
					<m:VBox>
						<m:Label text="납품 보류:"/>
						<m:Text text="{CustomerModel>/holddelivery}" />
					</m:VBox>
					<m:VBox>
						<m:Label text="전기 보류:"/>
						<m:Text text="{CustomerModel>/holdposting}" />
					</m:VBox>
				</layout:VerticalLayout>

				<layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
					<m:Label text="회사 코드"/>
					<m:Text text="{CustomerModel>/comcode}" />
				</layout:VerticalLayout>
				
			</m:FlexBox>
		</uxap:headerContent>

		<uxap:sections>
			<uxap:ObjectPageSection titleUppercase="false" title="기본 데이터">
				<uxap:subSections>
					<uxap:ObjectPageSubSection titleUppercase="false">
						<uxap:blocks>
							<m:VBox>
								<m:VBox>
									<forms:SimpleForm 
										editable="true"
										layout="ColumnLayout"
										title="일반 정보"
										columnsM="2"
										columnsL="3"
										columnsXL="4"
										>
										<forms:content>
											<m:Label text="개인 칭호" />
											<m:Text text="{CustomerModel>/gendercall}"/>
											
											<m:Label text="이름" />
											<m:Text text="{CustomerModel>/first_name}" />
											
											<m:Label text="성" />
											<m:Text text="{CustomerModel>/last_name}" />

											<m:Label text="성별" />
											<m:Text text="{CustomerModel>/gender}" visible="{=!${editModel>/edit}}"/>
											<m:Input width="100%" id="gender" value="{CustomerModel>/gender}" visible="{=${editModel>/edit}}"/>

											<m:Label text="권한 그룹" />
											<m:Text text="{CustomerModel>/authority_group}" visible="{=!${editModel>/edit}}"/>
											<m:Input id="authority_group" value="{CustomerModel>/authority_group}" visible="{=${editModel>/edit}}"/>

											<m:Label text="생년월일" />
											<m:Text text="{CustomerModel>/birthday}" visible="{=!${editModel>/edit}}"/>
											<m:Input id="birthday" value="{CustomerModel>/birthday}" visible="{=${editModel>/edit}}"/>

											<m:Label text="생성자" />
											<m:Text text="{CustomerModel>/create_person}" visible="{=!${editModel>/edit}}"/>
											<m:Input id="create_person" value="{CustomerModel>/create_person}" visible="{=${editModel>/edit}}"/>

											<m:Label text="생성일" />
											<m:Text text="{CustomerModel>/create_date}" visible="{=!${editModel>/edit}}"/>
											<m:Input id="create_date" value="{CustomerModel>/create_date}" visible="{=${editModel>/edit}}"/>

											<m:Label text="최종 변경자" />
											<m:Text text="{CustomerModel>/final_changer}" visible="{=!${editModel>/edit}}"/>
											<m:Input id="final_changer" value="{CustomerModel>/final_changer}" visible="{=${editModel>/edit}}"/>
											
											<m:Label text="최종 변경일" />
											<m:Text text="{CustomerModel>/final_change_date}" visible="{=!${editModel>/edit}}"/>
											<m:Input id="final_change_date" value="{CustomerModel>/final_change_date}" visible="{=${editModel>/edit}}"/>
							
										</forms:content>
									</forms:SimpleForm>
								</m:VBox>

								<m:VBox>
									<forms:SimpleForm
										editable="true"
										layout="ColumnLayout"
									
										columnsM="2"
										columnsL="3"
										columnsXL="4"
										>
										<forms:content>
											<m:Label text="고객" />
											<m:Text text="{CustomerModel>/bp_number}" id="bp_number"/>
											<m:Label text="고객 그룹 계정" />
											<m:Text text="{CustomerModel>/customer_group}" visible="{=!${editModel>/edit}}"/>
											<m:Input id="customer_group" value="{CustomerModel>/customer_group}" visible="{=${editModel>/edit}}"/>
											<m:Label text="고객 권한 그룹" />
											<m:Text text="{CustomerModel>/cust_authority_group}" visible="{=!${editModel>/edit}}"/>
											<m:Input id="cust_authority_group" value="{CustomerModel>/cust_authority_group}" visible="{=${editModel>/edit}}"/>
											<m:Label text="납품일 규칙" />
											<m:Text text="{CustomerModel>/deliverydate_rule}" visible="{=!${editModel>/edit}}" />
											<m:Input id="deliverydate_rule" value="{CustomerModel>/deliverydate_rule}" visible="{=${editModel>/edit}}"/>
											<m:Label text="그룹 키" />
											<m:Text text="{CustomerModel>/group_key}" visible="{=!${editModel>/edit}}"/>
											<m:Input id="group_key" value="{CustomerModel>/group_key}" visible="{=${editModel>/edit}}"/>
											<m:Label text="공급업체" />
											<m:Text text="{CustomerModel>/supplier}" visible="{=!${editModel>/edit}}"/>
											<m:Input id="supplier" value="{CustomerModel>/supplier}" visible="{=${editModel>/edit}}"/>
											<m:Label text="대리 지급인" />
											<m:Text text="{CustomerModel>/proxy_payer}" visible="{=!${editModel>/edit}}"/>
											<m:Input id="proxy_payer" value="{CustomerModel>/proxy_payer}" visible="{=${editModel>/edit}}"/>
											<m:Label text="지급 사유" />
											<m:Text text="{CustomerModel>/payment_reason}" visible="{=!${editModel>/edit}}"/>
											<m:Input id="payment_reason" value="{CustomerModel>/payment_reason}" visible="{=${editModel>/edit}}"/>
											<m:Label text="오더 보류" />
											<m:Text text="{CustomerModel>/holdorder}" visible="{=!${editModel>/edit}}"/>
											<m:Input id="holdorder" value="{CustomerModel>/holdorder}" visible="{=${editModel>/edit}}"/>
											<m:Label text="청구 보류" />
											<m:Text text="{CustomerModel>/holdclaim}" visible="{=!${editModel>/edit}}"/>
											<m:Input id="holdclaim" value="{CustomerModel>/holdclaim}" visible="{=${editModel>/edit}}"/>
											<m:Label text="납품 보류" />
											<m:Text text="{CustomerModel>/holddelivery}" visible="{=!${editModel>/edit}}"/>
											<m:Input id="holddelivery" value="{CustomerModel>/holddelivery}" visible="{=${editModel>/edit}}"/>
											<m:Label text="전기 보류" />
											<m:Text text="{CustomerModel>/holdposting}" visible="{=!${editModel>/edit}}"/>
											<m:Input id="holdposting" value="{CustomerModel>/holdposting}" visible="{=${editModel>/edit}}"/>
											<m:Label text="고객 보류" />
											<m:Text text="{CustomerModel>/classify_cust}" visible="{=!${editModel>/edit}}"/>
											<m:Input id="classify_cust" value="{CustomerModel>/classify_cust}" visible="{=${editModel>/edit}}"/>
											<m:Label text="VAT 납세 의무" />
											<m:Text text="{CustomerModel>/vat_duty}" visible="{=!${editModel>/edit}}"/>
											<m:Input id="vat_duty" value="{CustomerModel>/vat_duty}" visible="{=${editModel>/edit}}"/>

										</forms:content>
									</forms:SimpleForm>
								</m:VBox>
							</m:VBox>

							

							

						</uxap:blocks>
					</uxap:ObjectPageSubSection>

					<!-- <uxap:ObjectPageSubSection title="Connect" titleUppercase="false">
						<forms:SimpleForm editable="false" layout="ColumnLayout">

								<m:Label text="Evangelize the UI framework across the company" />
								<m:Text text="4 days overdue Cascaded"/>

								<m:Label text="Get trained in development management direction" />
