<mvc:View
	controllerName="project3.controller.CoA"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:t="sap.ui.table">




    <f:DynamicPage headerExpanded="{/headerExpanded}">
        <f:title>
            <f:DynamicPageTitle >
                <f:heading>
                    <HBox>
                        <Button
                        icon="sap-icon://nav-back"
                        press=".ongoBack"
                        type="Transparent"
                        />

                        <Title text="계정과목표 조회"/>
                    </HBox>
                </f:heading>
            </f:DynamicPageTitle>
        </f:title>

           
        <f:content class="sapUiSmallMargin">

<IconTabBar
                expanded="{device>/isNoPhone}"
                class="sapUiSmallMarginBottom sapUiResponsiveContentPadding">


                <items>
                    <IconTabFilter
                        text="재무제표 버전">
            <t:Table id="VersionTable" rows="{GlModel>/}" selectionMode="None" rowActionCount="1" width="auto">
           
                <t:columns>

                    <t:Column hAlign="Center">
                        <Label text="ID"/>
                        <t:template>
                            <Text text="{GlModel>version}"/>
                        </t:template>
                    </t:Column>
                    
                    <t:Column hAlign="Center">
                        <Label text="이름"/>
                        <t:template>
                             <Text text="{GlModel>version_name}"/>
                        </t:template>
                    </t:Column>

                    <t:Column hAlign="Center" >
                        <Label text="언어이름"/>
                        <t:template>
                             <Text text="{GlModel>language}"/>
                        </t:template>
                    </t:Column>

                      <t:Column hAlign="Center" >
                        <Label text="계정과목표"/>
                        <t:template>
                             <Text text="{GlModel>CoA}"/>
                        </t:template>
                    </t:Column>

                    

                </t:columns>

            </t:Table>

                    </IconTabFilter>

                       <IconTabFilter
                        text="계정과목표">

            <t:Table id="CoaTable" rows="{GlModel>/}" selectionMode="None" rowActionCount="1" width="auto">

                         
                   <t:rowActionTemplate>
                    <t:RowAction >
                        <t:items>
                            <t:RowActionItem type="Navigation" press=".onNavToDetailCOA"/>
                        </t:items>
                    </t:RowAction>
                </t:rowActionTemplate>


                  <t:Column hAlign="Center" >
                        <Label text="계정과목표"/>
                        <t:template>
                             <Text text="{GlModel>CoA}" />
                        </t:template>
                    </t:Column>

                        <t:Column hAlign="Center" >
                        <Label text="내역"/>
                        <t:template>
                             <Text text="{GlModel>CoA_name}"/>
                        </t:template>
                    </t:Column>

                      <t:Column hAlign="Center" >
                        <Label text="보류"/>
                        <t:template>
                            
                                     
                       <ObjectStatus text="{
                                path : 'GlModel>opendata',
                                formatter: '.models.OpenDataText'}"
                                state="{=
                                ${GlModel>opendata} === false ? 'Success' :
                                ${GlModel>opendata} === true ? 'Error' : 
                                'None'}"/>
                            
                        </t:template>
                    </t:Column>



                      </t:Table>
              </IconTabFilter>
        </items>
</IconTabBar>
        </f:content>

    </f:DynamicPage>
      
       
</mvc:View>

