<mvc:View
	controllerName="project3.controller.CoA"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:form="sap.ui.layout.form"
    xmlns:t="sap.ui.table"
    xmlns:fb="sap.ui.comp.filterbar"
	xmlns:core="sap.ui.core">




    <f:DynamicPage headerExpanded="{/headerExpanded}">
        <f:title>
            <f:DynamicPageTitle >
                <f:heading>
                    <HBox>
                        <Button
                        icon="sap-icon://nav-back"
                        press=".ongoBack"
                        type="Transparent"
                        />

                        <Title text="계정과목표"/>
                    </HBox>
                </f:heading>
            </f:DynamicPageTitle>
        </f:title>

           
        <f:content class="sapUiSmallMargin">

<IconTabBar
                expanded="{device>/isNoPhone}"
                class="sapUiSmallMarginBottom sapUiResponsiveContentPadding">


                <items>
                    <IconTabFilter
                        text="기본메뉴">
            <t:Table id="GlTable" rows="{GlModel>/}" selectionMode="None" rowActionCount="1" width="auto">
           
                 

                <t:columns>

                    <t:Column hAlign="Center">
                        <Label text="ID"/>
                        <t:template>
                            <Text text="{GlModel>gl_external_id}"/>
                        </t:template>
                    </t:Column>
                    
                    <t:Column hAlign="Center">
                        <Label text="내역"/>
                        <t:template>
                             <Text text="{GlModel>meaning}"/>
                        </t:template>
                    </t:Column>

                    <t:Column hAlign="Center" >
                        <Label text="보류"/>
                        <t:template>
                             <Text text="{GlModel>opendata}"/>
                        </t:template>
                    </t:Column>

                    

                </t:columns>

            </t:Table>

                    </IconTabFilter>
        </items>
</IconTabBar>
        </f:content>

    </f:DynamicPage>
      
       
</mvc:View>