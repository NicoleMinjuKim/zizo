<mvc:View
	controllerName="project3.controller.CreateGl"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.uxap"
	xmlns:layout="sap.ui.layout"
	xmlns:m="sap.m"
	xmlns:t="sap.ui.table"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
    <ObjectPageLayout 
		showTitleInHeaderContent="true"
		upperCaseAnchorBar="false">
		<headerTitle>
			<ObjectPageDynamicHeaderTitle>
				<expandedHeading>
					<m:HBox>
						<m:Button icon="sap-icon://nav-back" type="Transparent" press=".onBack"/>
						<m:Title text="New G/L 계정 마스터 데이터"  wrapping="true"/>
                    </m:HBox>
				</expandedHeading>				
			</ObjectPageDynamicHeaderTitle>
		</headerTitle>
		<sections>
            <ObjectPageSection titleUppercase="true"  title="헤더" importance="Medium">
				<subSections>
					<ObjectPageSubSection  titleUppercase="false">
						<blocks>                            
							<m:VBox class="sapUiSmallMargin">
                                <f:SimpleForm 
									editable="false"
									layout="ResponsiveGridLayout"
									labelSpanXL="4"
									labelSpanL="4"
									labelSpanM="4"
									labelSpanS="12"
									adjustLabelSpan="false"
									emptySpanXL="0"
									emptySpanL="0"
									emptySpanM="0"
									emptySpanS="0"
									columnsXL="3"
									columnsL="2"
									columnsM="2"
									singleContainerFullSize="false" >
                                    <f:content>
										<m:Label text="G/L 계정 외부 ID"/>
								        <m:Input width="100%" id="gl_external_id" required="true"
												value="{CreateGl>/gl_external_id}" />
                                        <m:Label text="G/L 계정"/>
								        <m:MultiInput width="100%" id="gl_account" required="true"
												value="" showValueHelp="true"
												valueHelpRequest=".onSearchGlAccount" />
                                    </f:content>
                                </f:SimpleForm>
							</m:VBox>	
						</blocks>
                        <actions>
							<m:Button text="확인" type="Emphasized" press=".onCreate" />
                            <m:Button text="취소" type="Transparent" press=".onReset" />
						</actions>
					</ObjectPageSubSection>					
				</subSections>
			</ObjectPageSection>
			<ObjectPageSection titleUppercase="true"  title="일반" importance="Medium">
				<subSections>
					<ObjectPageSubSection  titleUppercase="false">
						<blocks>
							<m:VBox class="sapUiSmallMargin">
								<f:SimpleForm 
									editable="false"
									layout="ResponsiveGridLayout"
									title="기본정보"
									labelSpanXL="4"
									labelSpanL="4"
									labelSpanM="4"
									labelSpanS="12"
									adjustLabelSpan="false"
									emptySpanXL="0"
									emptySpanL="0"
									emptySpanM="0"
									emptySpanS="0"
									columnsXL="3"
									columnsL="2"
									columnsM="2"
									singleContainerFullSize="false" >
									<f:content>
										<core:Title text="관리" />
										<m:Label text="계정과목표"/>
                                        <m:Input width="100%" id="CoA" value="{CreateGl>/CoA}" required="true" />
										<m:Label text="G/L 계정 유형"/>
										<m:Input width="100%" id="gl_account_type" value="{CreateGl>/gl_account_type}"  required="true" />
										<m:Label text="계정 그룹"/>
                                        <m:Input width="100%" id="accont_group" value="{CreateGl>/accont_group}" showValueHelp="true" required="true"/>
										<m:Label text="손익계산서 계정 유형"/>
                                        <m:Input width="100%" id="pl_account_type" value="{CreateGl>/pl_account_type}"  />
										<m:Label text="기능영역"/>
                                        <m:Input width="100%" id="functional_area" value="{CreateGl>/functional_area}"  />
										<core:Title text="내역(유지보수 언어) (EN)" />
										<m:Label text="내역"/>
                                        <m:Input width="100%" id="history" value="{CreateGl>/history}" required="true" />
										<m:Label text="G/L 계정 설명"/>
                                        <m:Input width="100%" id="description" value="{CreateGl>/description}"  />
										<core:Title text="연결 데이터" />
										<m:Label text="관계사 번호"/>
                                        <m:Input width="100%" id="gl_affliation_num" value="{CreateGl>/gl_affliation_num}"  />
                                        <m:Label text="그룹 계정 번호"/>
                                        <m:Input width="100%" id="account_group_num" value="{CreateGl>/account_group_num}"  />
									</f:content>
								</f:SimpleForm>
							</m:VBox>	
						</blocks>
					</ObjectPageSubSection>					
				</subSections>
			</ObjectPageSection>

			<ObjectPageSection titleUppercase="false"  title="회사 코드 데이터">
				<subSections>
					<ObjectPageSubSection  importance="Medium" titleUppercase="false">
						<blocks>
							<t:Table selectionMode="None">
								<t:extension>
									<m:OverflowToolbar style="Clear">
										<m:Title  text="회사 코드 지정"/>
                                        <m:ToolbarSpacer/>
                                        <m:Button type="Transparent" text="회사코드 데이터 생성"
												press=".onCreateCompanyCode"/>
                                        <m:Button icon="sap-icon://delete"
												press=".onDelete"/>
									</m:OverflowToolbar>
								</t:extension>
								<t:columns>
									<t:Column hAlign="Center">
										<m:Label text="관리회계 영역"/>
										<t:template>
											<m:Text text=""/>
										</t:template>									
									</t:Column>
									<t:Column hAlign="Center">
										<m:Label text="회사 코드"/>
										<t:template>
											<m:Text text=""/>
										</t:template>									
									</t:Column>
									<t:Column hAlign="Center">
										<m:Label text="회사 이름"/>
										<t:template>
											<m:Text text=""/>
										</t:template>									
									</t:Column>
									<t:Column hAlign="Center">
										<m:Label text="계정 통화"/>
										<t:template>
											<m:Text text=""/>
										</t:template>									
									</t:Column>
									<t:Column hAlign="Center">
										<m:Label text="계정과목표"/>
										<t:template>
											<m:Text text=""/>
										</t:template>									
									</t:Column>
								
								</t:columns>
							</t:Table>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
		</sections>		
	</ObjectPageLayout>
    
</mvc:View>