<mvc:View
	controllerName="project3.controller.gl_home"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
    <ScrollContainer height="100%" width="100%" vertical="true" focusable="true">
        <Panel width="auto" class="sapUiResponsiveMargin" accessibleRole="Region">
            <content class="panelbottomline">
                <GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
                            header="GL 계정 조회"
                            press=".onGl">                    
                </GenericTile>
                <GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
                            header="GL 계정 상세"
                            press=".onDetailGl">                    
                </GenericTile>
                <GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
                            header="GL 계정 생성"
                            press=".onCreateGl">                    
                </GenericTile>
            </content>
        </Panel>
    </ScrollContainer>
</mvc:View>