<mvc:View
    controllerName="project1.controller.home"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:form="sap.ui.layout.form"
   >

 

<App id = "app">


<pages>
<Page id ="page" title="{i18n>title}" titleAlignment="Center">
       
<content>



<form:SimpleForm 
visible="{= !${login>/login}}"
 editable = "true" layout="ResponsiveGridLayout" adjustLabelSpan="false"
labelSpanL="4" labelSpanM="4" labelSpanS="12" columnsL="1" columnsM="1" emptySpanL="4" emptySpanM="4" >

  <form:content>



  </form:content>
</form:SimpleForm>

    <VBox justifyContent='Center' alignContent="Center" alignItems="Center" class="sapUiSmallMargin" width="100%" visible="{= !${login>/login}}">
    
        <HBox width="100%">
            <VBox width="100%">
                <VBox width="100%">
                    <HBox alignItems="Center" width="100%">
                        <VBox width="100%" alignItems="End">
                            <Label text= "아이디: " required="true"/>
                        </VBox>
                        <VBox width="300px">
                            <Input id = "inp_usernameId" width="300px"/>
                        </VBox>
                    </HBox>
                </VBox>
                <VBox width="100%">
                    <HBox alignItems="Center" width="100%">
                        <VBox width="100%" alignItems="End">
                            <Label text= "비밀번호: " required="true"/>
                        </VBox>
                        <VBox width="300px">
                            <Input id = "inp_passwordId" type="Password" width="300px"/>
                        </VBox>
                    </HBox>
                </VBox>
            </VBox>

            <VBox width="82%">
                <Button text="로그인" class="customBtn" press=".onlogin">
                    
                </Button>
            </VBox>

        </HBox>
        
    </VBox>




<MessagePage 
        text="환영합니다."
        icon="sap-icon://home">
		<buttons>
		<Button text="About Us" type="Emphasized" press=".onAboutUs"     />
        </buttons>

    </MessagePage>
</content>
